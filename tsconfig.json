{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "types": ["jest", "react-native", "Node"],
        "typeRoots": ["node_modules/@types"],
        "lib": ["esnext", "dom"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@env": ["node_modules/react-native-dotenv"],
            "@orbyt-component": ["./src/components"],
            "@orbyt-screen": ["./src/screens"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "moduleFileExtensions": ["ts", "tsx"]
}
