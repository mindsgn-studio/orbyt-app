{  
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "types" : [],
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./src/types"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@env": ["node_modules/react-native-dotenv"] // this mapping is relative to "baseUrl"
    }
  },
  "globals": [
    "useTheme", 
    "ios", 
    "android", 
    "web", 
    "__DEV__", 
    "IS_DEV"
  ],
  "exclude": [
    "ios",
    "android",
    "shim.js",
    "apps/@types",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
